@{
    ViewData["Title"] = "Product detail";
}
@model ProductViewModel

<div class="container py-4">
    <div class="row">
        <div class="col-sm-6">
            <div>
                <img src="~/Images/placeholder.png" style="width:100%;height:auto" alt="product image" />
            </div>
        </div>
        <div class="col-sm-6">
            <h4>@Model.Product.Name</h4>
            <p>Product producer</p>
            <p class="price">@Model.Product.Price MDL</p>
            <p><button class="to-cart">Add to Cart</button></p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <h3>Product description</h3>
            <p>@Model.Product.Description</p>
        </div>
    </div>
</div>