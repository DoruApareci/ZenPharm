@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using ZenPharm.DAL.Models
@inject SignInManager<ZenPharmUser> SignInManager
@inject UserManager<ZenPharmUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole("Moderator") || User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" href="@Url.Action("index", "admin")">Dasboard</a>
            </li>
        }
        @if (User.IsInRole("Buyer"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" href="@Url.Action("ShoppingCart", "products")">
                    <i class="fa-solid fa-cart-shopping"></i>
                    Cart
                </a>
            </li>
        } 
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
