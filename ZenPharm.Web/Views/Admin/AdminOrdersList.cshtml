@using ZenPharm.DAL.Models;
@using ZenPharm.DAL.Models.Enums
@model List<Order>

<div class="container">
    <div class="row justify-content-between">
        <div class="col-lg-5">
            <h2>Order list</h2>
        </div>
    </div>
    @if (!(Model.Count == 0))
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Placed</th>
                    <th>Order status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ord in Model)
                {
                    <tr>
                        <td>
                            @ord.ID.ToString().Substring(0, 5)
                        </td>
                        <td>
                            @ord.Placed
                        </td>
                        <td>
                            @ord.Status
                        </td>
                        <td class="d-flex">
                            <a class="btn btn-block btn-primary mx-2" href="@Url.Action("orderdetails", "admin", new{@ID= ord.ID})">
                                <i class="fa-solid fa-pen-to-square"></i>
                                Details
                            </a>
                            @if (ord.Status == OrderStatus.Open)
                            {
                                @using (Html.BeginForm("closeorder", "admin", FormMethod.Post))
                                {
                                    @Html.Hidden("id", ord.ID)
                                    <button type="submit" class="btn btn-block btn-secondary mx-2">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                        Close order
                                    </button>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>No order was placed!</h3>
    }
</div>