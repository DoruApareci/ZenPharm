@using ZenPharm.DAL.Models;
@model List<Order>

<div class="container">
    <div class="row justify-content-between">
        <div class="col-lg-5">
            <h2>Order list</h2>
        </div>
    </div>
    @if (!(Model.Count == 0))
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ord in Model)
                {
                    <tr>
                        <td>
                            @ord.ID
                        </td>
                        <td class="d-flex">
                            <a class="btn btn-block btn-primary mx-2" href="@Url.Action("orderdetails", "admin", new{@ID= ord.ID})">
                                <i class="fa-solid fa-pen-to-square"></i>
                                Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>No order was placed!</h3>
    }
</div>